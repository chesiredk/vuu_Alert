<student_signuppage>:
   name: "signup"
   MDFloatLayout:
      MDCard:
         size_hint: .45, .8
         pos_hint: {"center_x": .5, "center_y": .5}
         Carousel:
            id: slide
            MDFloatLayout:
               MDTextField:
                  hint_text: "Student ID"
                  size_hint_x: .8
                  pos_hint: {"center_x": .5, "center_y": .48}
               MDTextField:
                  hint_text: "First Name"
                  size_hint_x: .8
                  pos_hint: {"center_x": .5, "center_y": .38}
               MDTextField:
                  hint_text: "Middle Initial"
                  size_hint_x: .8
                  pos_hint: {"center_x": .5, "center_y": .28}
               MDTextField:
                  hint_text: "Last Name"
                  size_hint_x: .8
                  pos_hint: {"center_x": .5, "center_y": .18}
               MDRaisedButton:
                  text: "NEXT"
                  size_hint_x: .8
                  pos_hint: {"center_x": .5, "center_y": .2}
                  color: "black"
                  on_release: app.next()
            MDFloatLayout:
               MDTextField:
                  hint_text: "Email Address"
                  size_hint_x: .8
                  pos_hint: {"center_x": .5, "center_y": .48}
               MDTextField:
                  hint_text: "Phone Number"
                  size_hint_x: .8
                  pos_hint: {"center_x": .5, "center_y": .38}
               MDTextField:
                  hint_text: "Residence Building"
                  size_hint_x: .8
                  pos_hint: {"center_x": .5, "center_y": .28}
               MDTextField:
                  hint_text: "Room Number"
                  size_hint_x: .8
                  pos_hint: {"center_x": .5, "center_y": .18}
               MDRaisedButton:
                  text: "PREVIOUS"
                  size_hint_x: .39
                  pos_hint: {"center_x": .3, "center_y": .2}
                  color: "black"
                  on_release: app.previous()
               MDRaisedButton:
                  text: "NEXT"
                  size_hint_x: .39
                  pos_hint: {"center_x": .7, "center_y": .2}
                  color: "black"
                  on_release: app.next()
            MDFloatLayout:
               MDTextField:
                  hint_text: "Set Password"
                  size_hint_x: .8
                  pos_hint: {"center_x": .5, "center_y": .48}
                  password: True
                  on_text: self.text = self.text.replace(" ", "")
               MDTextField:
                  hint_text: "Confirm Password"
                  size_hint_x: .8
                  pos_hint: {"center_x": .5, "center_y": .38}
                  password: True
                  on_text: self.text = self.text.replace(" ", "")
               MDRaisedButton:
                  text: "PREVIOUS"
                  size_hint_x: .39
                  pos_hint: {"center_x": .3, "center_y": .2}
                  color: "black"
                  on_release: app.previous()
               MDRaisedButton:
                  text: "submit"
                  size_hint_x: .39
                  pos_hint: {"center_x": .7, "center_y": .2}
                  color: "maroon"

      MDLabel:
         text: "SignUp Form"
         bold: True
         pos_hint: {"center_x": .88, "center_y": .8}
         font_style: "H4"
      MDLabel:
         id: personalInfo
         text: "Personal Info"
         pos_hint: {"center_x": .808, "center_y": .7}
         font_style: "H6"
         theme_text_color: "Custom"
      MDIconButton:
         icon: "numeric-1-circle"
         pos_hint: {"center_x": .34, "center_y": .65}
         user_font_size: "35sp"
      MDProgressBar:
         size_hint_x: .1
         pos_hint: {"center_x": .42, "center_y": .65}
      MDLabel:
         id: residence
         text: "Residence"
         pos_hint: {"center_x": .958, "center_y": .7}
         font_style: "H6"
         theme_text_color: "Custom"
      MDIconButton:
         icon: "numeric-2-circle"
         pos_hint: {"center_x": .5, "center_y": .65}
         user_font_size: "35sp"
      MDProgressBar:
         size_hint_x: .1
         pos_hint: {"center_x": .58, "center_y": .65}
      MDLabel:
         id: "submit"
         text: "Submit"
         pos_hint: {"center_x": 1.12, "center_y": .7}
         font_style: "H6"
         theme_text_color: "Custom"
      MDIconButton:
         icon: "numeric-3-circle"
         pos_hint: {"center_x": .66, "center_y": .65}
         user_font_size: "35sp"

